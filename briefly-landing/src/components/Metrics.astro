---
import { defaultMetrics } from '../config/site';

type Metric = (typeof defaultMetrics)[number];

interface Props {
  metrics?: Metric[];
}

const { metrics = defaultMetrics } = Astro.props as Props;
---

<section id="metrics" class="py-16 sm:py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <p class="text-sm font-semibold uppercase tracking-wide text-[var(--brand-teal-soft)]">Momentum</p>
        <h2 class="mt-2 text-3xl font-semibold text-white sm:text-4xl">Growing with every listen</h2>
      </div>
      <p class="max-w-xl text-[var(--brand-muted)]">Hard-coded, fast-moving numbers that show how Briefly is already being used.</p>
    </div>

    <div class="mt-10 grid gap-8 sm:grid-cols-3">
      {metrics.map((metric) => (
        <div class="rounded-2xl border border-[rgba(147,200,194,0.18)] bg-[var(--brand-overlay)] p-6 text-center shadow-sm">
          <p class="text-3xl font-semibold text-white sm:text-4xl">{metric.value}</p>
          <p class="mt-2 text-sm text-[var(--brand-muted)]">{metric.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>
