<section id="waitlist" class="py-16 sm:py-20">
  <div class="mx-auto max-w-4xl px-6">
    <div class="overflow-hidden rounded-3xl border border-[rgba(147,200,194,0.22)] bg-gradient-to-br from-[#1f3a4e] via-[var(--brand-bg)] to-[var(--brand-bg-deep)] p-8 shadow-xl shadow-[rgba(0,0,0,0.45)]">
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div class="max-w-2xl space-y-2">
          <h3 class="text-3xl font-semibold text-white">Be first to try Briefly</h3>
          <p class="text-[var(--brand-muted)]">We're rolling out access to early creators and power listeners.</p>
        </div>
      </div>
      <form action="#" method="post" class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center">
        <input
          type="email"
          name="email"
          required
          placeholder="you@example.com"
          class="w-full rounded-full border border-[rgba(147,200,194,0.22)] bg-[var(--brand-overlay-strong)] px-4 py-3 text-sm text-white placeholder:text-[rgba(199,217,231,0.7)] focus:border-[var(--brand-accent)] focus:outline-none focus:ring-2 focus:ring-[rgba(255,165,99,0.35)] sm:flex-1"
        />
        <button
          type="submit"
          class="inline-flex items-center justify-center rounded-full bg-[var(--brand-accent)] px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-[rgba(255,165,99,0.35)] transition hover:-translate-y-0.5 hover:bg-[#ffb67f]"
        >
          Join the waitlist
        </button>
      </form>
    </div>
  </div>
</section>
