<script>
  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', () => {
      const mock = document.getElementById('hero-mock');
      const phones = document.getElementById('hero-phones');
      if (!mock || !phones) return;

      setTimeout(() => {
        mock.classList.add('hero-fade-out');
        phones.classList.remove('opacity-0');
        const phoneEls = phones.querySelectorAll('[data-phone]');
        phoneEls.forEach((el, idx) => {
          const delay = 0.15 * idx;
          el.classList.add('phone-slide-in');
          el.style.animationDelay = `${delay}s`;
        });
      }, 4000);
    });
  }
</script>
